{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://mirror.ox.ac.uk/sites/mirror.centos.org/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
      "iso_checksum": "F90E4D28FA377669B2DB16CBCB451FCB9A89D2460E3645993E30E137AC37D284",
      "iso_checksum_type": "sha256",
      "ssh_username": "root",
      "ssh_password": "vagrant",
	  "http_directory": "kickstart",
      "ssh_wait_timeout": "3000s",	  
	  "boot_wait": "10s",
	  "boot_command": [ "<tab>", " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/agent-ks.cfg <enter>"	  ],
	  "guest_additions_mode": "upload",
      "shutdown_command": "shutdown now"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [ 
	    "scripts/set-private-keys.sh"		
	  ]
    }	
  ],

  "post-processors": [{
    "type": "vagrant",
    "output": "agent.box"
  }]
}
